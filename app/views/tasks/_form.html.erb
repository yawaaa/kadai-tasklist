<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :status, "ステータス"%>
  <%= f.text_field :status %>
  
  <%= f.label :content, "メッセージ"%>
  <%= f.text_field :content %>

  <%= f.submit "登録" %>
<% end %>
