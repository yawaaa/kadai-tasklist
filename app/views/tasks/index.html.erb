<h1>タスク一覧</h1>

<% if logged_in? %>
  <p> ようこそ <% current_user.name %> さん</p>
      
      <% if @tasks.any? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>id</th>
              <th>ステータス</th>
              <th>タスク</th>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %>
              <tr>
                <td><%= link_to task.id, task %></td>
                <td><%= task.status %></td>
                <td><%= task.content %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div>
          <!-- %= paginate @tasks %>-->
        </div>
      <% end %>

      <%= link_to "新規タスクの追加", new_task_path, class: "btn btn-primary" %>

<% end %>

<%= link_to "ユーザ登録はこちら", signup_path, class: "btn btn-primary" %>


